<nav class="py-4 px-16 flex flex-row justify-between items-center">
    <h1 class="text-xl text-fountain-blue-600">
        Temperature Warrior
    </h1>
    <label class="flex flex-row gap-2 items-center mx-4">
        <span>
            Password:
        </span>
        <input
            type="password"
            id="password"
            name="password"
            class="border border-gray-300 rounded-md py-1 px-2 w-32 text-dark-primary"
            placeholder="Password"
        >
    </label>
</nav>

<script is:inline>
    let password = localStorage.getItem('password') ?? '';

    const passwordInput = document.getElementById('password');

    passwordInput.value = password;

    passwordInput.addEventListener('change', (event) => {
        password = event.target.value;
        localStorage.setItem('password', password);
        console.log('Password changed to:', password);
    });
</script>
